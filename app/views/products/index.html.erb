<div class = "title">Product List</div>
<table border="1px">
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th>Price</th>
    <th>Description</th>
    <th colspan=3>Action</th>
  </tr>
  
  <% @products.each do |p| %>
    <tr>
      <td><%= p.name %></td>
      <td><%= p.status %></td>
      <td><%= p.price %></td>
      <td><%= p.description  %></td>
      <td><%= link_to 'Show',product_path(p)%></td>
      <td><%= link_to 'Edit',edit_product_path(p)%></td>
      <td><%= button_to 'Delete', {controller: :products ,action: :destroy , id: p.id}, confirm: "Are you sure?" ,method: :delete%></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Product',new_product_path()%>
